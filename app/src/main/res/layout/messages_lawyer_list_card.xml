<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="409dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_sender_image"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@drawable/iv_message_image_background"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                app:strokeWidth="1dp">

            </com.google.android.material.imageview.ShapeableImageView>

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_messageDetailsActivity_subject"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/iv_message_image_background"
                    android:text=" Subject:"
                    android:textColor="@color/primary">

                </TextView>

                <TextView
                    android:id="@+id/tv_messageDetailsActivity_sender"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/iv_message_image_background"
                    android:text=" Sender:"
                    android:textColor="@color/primary">

                </TextView>

                <TextView
                    android:id="@+id/tv_messageDetailsActivity_status"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/iv_message_image_background"
                    android:text=" Status:"
                    android:textColor="@color/primary">

                </TextView>


            </LinearLayout>

            <ImageView
                android:id="@+id/iv_icon_readen"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="@drawable/iv_message_image_background">

            </ImageView>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>